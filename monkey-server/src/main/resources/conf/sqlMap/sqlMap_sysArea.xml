<?xml version="1.0" encoding="UTF-8" ?>

<sqlMap namespace="SysArea">


    <!-- 根据label和type查询 -->
    <sql id="queryByLabelAndType" isRead="true">
        <![CDATA[
           SELECT
                *
            FROM
                t_sys_area t
            WHERE
                t.label =:label
            AND t.type =:type
            <#if pid??  && pid?length gt 0>
                and t.pid=:pid
            </#if>
            LIMIT 1
       ]]>
    </sql>

    <!--根据ID查询区域信息-->
    <sql id="queryById" isRead="true">
        <![CDATA[
           SELECT
                *
            FROM
                t_sys_area t
            WHERE
                t.id=:id
       ]]>
    </sql>

    <!--根据areaId查询中文名-->
    <sql id="queryNameByAreaIds" isRead="true">
        <![CDATA[
        SELECT
        *
        FROM
        t_sys_area t
        WHERE t.`areaID` IN (:areaIds)
        ]]>
    </sql>

</sqlMap>
