<?xml version="1.0" encoding="UTF-8" ?>
<sqlMap namespace="Company">
    <sql id="findCompanyByCompanyName" isRead="true">
        <![CDATA[
	    select COUNT(1) from t_company where company_name = :companyName limit 1
	    ]]>
    </sql>
    <sql id="findCompanyList" isRead="true">
        <![CDATA[
	    	SELECT id,company_name,`status` FROM `t_company` where `status`=0
	    ]]>
    </sql>
    <sql id="findAutoSyncCompanyList" isRead="true">
        <![CDATA[
            SELECT id,company_name,`status` FROM `t_company` where `status`=0 and auto_sync=0
        ]]>
    </sql>
    <sql id="findAccountByLinkPhone" isRead="true">
        <![CDATA[
	    	SELECT
                t1.id,
                t1.salt
            FROM
                wec_account t1
                LEFT JOIN t_company t2 ON t1.company_id = t2.id
            WHERE
                t2.link_man = :phone
                AND t1.acc_type = 1
                AND t1.`status` = 0
                AND t2.`status` = 0
	    ]]>
    </sql>
    
	<sql id="testfindCompanyList" isRead="true">
        <![CDATA[
            SELECT * FROM `t_company_bak` where id=:id
        ]]>
	</sql>

</sqlMap>